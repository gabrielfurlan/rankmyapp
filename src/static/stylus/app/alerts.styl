.alerts 
	width 100%
	max-width 768px
	height 100%
	padding 40px
	
	header
		width 100%
		display flex
		justify-content space-between
		align-items center
				
		> h1.title
			font-size 1.2em
			font-weight 300
			
			> span 
				color $red-color
				
		> .more-wrapper
			position relative
			
			> .more 
				width 35px
				height 35px 
				background-color $red-color
				color $white-color
				font-size 1.4em
				font-weight 500
				border-radius 4px
				box-shadow 0px 1px 2px 0px rgba(#000, .2)
			
			> .form
				display none
				position absolute
				width 300px
				border-radius 4px
				padding 10px
				right 0px
				top 45px
				box-shadow 0px 1px 2px 0px rgba(#000, .2)
				background-color #fff
				
				> label
					display inline-block
					font-size .8
					margin-bottom 10px
					
				> .input
				> .select
				> .save
					width 100%
					box-shadow 0px 1px 2px 0px rgba(#000, .2)
					padding 14px 10px
					margin-bottom 20px
					border-radius 4px
					background-color transparent
					
				> .save
					background-color $red-color
					color #fff
					cursor pointer
					width 100%
					font-weight 500
					margin-bottom 0
					&:hover
						box-shadow 0px 1px 2px 0px rgba(#000, .4)
						
			&.-show
				> .form
					display block
					z-index 2
	main 
		width 100%
		margin-top 60px
		
		> .alert 
			width 100%
			background-color #fff
			padding 12px
			border-radius 4px
			box-shadow 0px 1px 2px 0px rgba(#000, .4)
			position relative
			
			& + .alert 
				margin-top 15px
				
			header
				display block
				margin-bottom 30px
				 
				h3.title
					display inline-block
					font-weight 400
					text-transform lowercase
					margin-right 5px
					color $red-color
					
				p.id
					display inline-block
					color #c4c4c4	
					
					&:before 
						content '/'
						margin-right 5px
						
			img 
				position absolute
				right 12px
				top 12px
				cursor pointer