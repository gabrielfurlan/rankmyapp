.check-in 
	width 100%
	max-width 480px
	
	> form
		> h1.title
			color $black-color
			display inline-block
			font-size 1.4em
			margin-bottom 20px
			font-weight 300
			
			> strong
				color $red-color
				font-weight 400
		
		> .input
		> .button
			box-shadow 0px 1px 2px 0px rgba(#000, .2)
			padding 14px 10px
			margin-bottom 20px
			border-radius 4px
			
		> .input	
			width 100%		
		
		> .button
			background-color $red-color
			color $white-color
			cursor pointer
			width 100%
			font-weight 500
			
			&:hover
				box-shadow 0px 1px 2px 0px rgba(#000, .4)
				